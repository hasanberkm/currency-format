{
    "name": "hasanberkm/currency-format",
    "description": "Simple currency formatting package for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hasanberkm\\CurrencyFormat\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hasanberkm\\CurrencyFormat\\CurrencyFormatServiceProvider"
            ],
            "aliases": {
                "CurrencyFormat": "Hasanberkm\\CurrencyFormat\\Facades\\CurrencyFormat"
            }
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "*"
    }
}
